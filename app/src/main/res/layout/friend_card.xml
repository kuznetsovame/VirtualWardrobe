<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="97dp"
        android:layout_height="94dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/add_friend"
        android:layout_width="158dp"
        android:layout_height="48dp"
        android:text="Add to friends"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toBottomOf="@+id/profile_image"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintStart_toStartOf="@+id/user_login" />

    <EditText
        android:id="@+id/name"
        android:layout_width="107dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="@+id/user_login"
        app:layout_constraintStart_toEndOf="@+id/user_login"
        app:layout_constraintTop_toTopOf="@+id/user_login"
        app:layout_constraintVertical_bias="0.64" />

    <TextView
        android:id="@+id/user_login"
        android:layout_width="137dp"
        android:layout_height="23dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="login"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toTopOf="@+id/profile_image" />
</androidx.constraintlayout.widget.ConstraintLayout>